<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alex.opencvdemo.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="表情识别测试"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择识别接口："
            android:layout_gravity="center_vertical"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/api_spin">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:autofillHints="识别结果"
            android:orientation="horizontal"
            android:id="@+id/detect_result">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:id="@+id/detect_image1"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:hint="表情"
                    android:maxWidth="100dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/detect_rstext1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:id="@+id/detect_image2"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:hint="表情"
                    android:maxWidth="100dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/detect_rstext2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:id="@+id/detect_image3"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:hint="表情"
                    android:maxWidth="100dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/detect_rstext3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:id="@+id/detect_image4"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:hint="表情"
                    android:maxWidth="100dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/detect_rstext4"/>
            </LinearLayout>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="3"
            android:rowCount="1">
            <Button
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="选择图片"
                android:id="@+id/choose_image"
                android:background="@drawable/btngroup_selector"/>
            <Button
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="抓图识别"
                android:id="@+id/capture_image"
                android:background="@drawable/btngroup_selector"/>
            <Button
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="实时识别"
                android:id="@+id/real_image"
                android:background="@drawable/btngroup_selector"/>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:opencv="http://schemas.android.com/apk/res-auto">
            <!-- OpenCV摄像头组件 -->
            <org.opencv.android.JavaCameraView
                android:id="@+id/camera_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                opencv:camera_id="front"
                opencv:show_fps="true"
                tools:layout_editor_absoluteY="289dp"
                tools:ignore="MissingConstraints" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>